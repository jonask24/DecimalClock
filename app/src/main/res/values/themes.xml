<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for the entire app - no light theme needed -->
    <style name="Theme.DecimalClock" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Essential colors with new names -->
        <item name="colorPrimary">@color/button_background</item>
        <item name="colorPrimaryVariant">@color/button_background_dark</item>
        <item name="colorOnPrimary">@color/button_text</item>
        
        <item name="android:windowBackground">@color/main_background</item>
        <item name="colorSurface">@color/surface_background</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textColorPrimary">@color/main_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <item name="colorButtonNormal">@color/button_background</item>
        
        <!-- Only ONE reference to the bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.DecimalClock.BottomNavigationView</item>
    </style>
    
</resources>